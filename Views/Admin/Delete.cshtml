@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
    ViewData["IsAdminPage"] = true;
}

<div class="min-h-[80vh] flex items-center justify-center p-6 bg-gradient-to-br from-slate-50 to-red-50/50">

    <!-- 1. THE WRAPPER -->
    <div class="relative w-full max-w-lg">

        <!-- 2. FLOATING BACK BUTTON (Desktop) -->
        <a href="/Admin/AdminIndex" class="absolute -left-24 top-6 hidden lg:flex flex-col items-center gap-2 text-slate-400 hover:text-slate-600 transition-all group text-decoration-none z-10" title="Back to Dashboard">
            <div class="p-4 bg-white rounded-full shadow-sm border border-slate-200 group-hover:border-red-300 group-hover:shadow-md group-hover:-translate-x-1 transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            </div>
            <span class="text-xs font-bold opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap delay-75">Go Back</span>
        </a>

        <!-- 3. MOBILE BACK BUTTON -->
        <a href="/Admin/AdminIndex" class="lg:hidden flex items-center gap-2 text-slate-500 mb-4 font-bold text-sm hover:text-slate-800 transition-colors text-decoration-none">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Back to Dashboard
        </a>

        <!-- 4. MAIN CARD -->
        <div class="bg-white border border-slate-200 rounded-3xl shadow-xl overflow-hidden relative">
            <div class="bg-gradient-to-r from-red-600 to-red-500 p-6 text-center relative overflow-hidden">
                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-40 h-40 bg-white/10 rounded-full blur-2xl"></div>
                <div class="relative z-10 w-20 h-20 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center mx-auto mb-3 shadow-inner">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                </div>
                <h2 class="text-2xl font-bold text-white tracking-wide">Delete Project</h2>
                <p class="text-red-100 text-sm">Select the project you want to remove</p>
            </div>

            <div class="p-8">
                <p class="text-slate-500 text-center mb-6 text-sm">
                    <span class="font-bold text-slate-800">Warning:</span> This action is permanent. The project, its images, and description will be erased from the database.
                </p>

                <form method="post" class="space-y-4">
                    <div class="relative group">
                        <label class="block text-sm font-bold text-slate-700 mb-2 ml-1">Choose Project</label>
                        <select class="w-full appearance-none px-4 py-4 bg-slate-50 border border-slate-200 rounded-xl focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-red-500 outline-none font-medium text-slate-700 transition-all cursor-pointer">
                            <option disabled selected>-- Select a project to delete --</option>
                            <option>Portfolio Website</option>
                            <option>E-Commerce App</option>
                            <option>Old Python Scripts</option>
                        </select>
                        <div class="absolute top-[42px] right-4 pointer-events-none text-slate-400">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                        </div>
                    </div>

                    <div class="pt-6 space-y-3">
                        <button type="submit" class="w-full py-3.5 rounded-xl font-bold text-white bg-gradient-to-r from-red-600 to-red-500 hover:from-red-700 hover:to-red-600 shadow-lg shadow-red-200/50 transform hover:scale-[1.02] transition-all">
                            Confirm Delete
                        </button>
                        <a href="/Admin/AdminIndex" class="block w-full text-center py-3 rounded-xl font-bold text-slate-400 hover:text-slate-600 hover:bg-slate-50 transition-all text-decoration-none cursor-pointer">
                            Cancel, keep it safe
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>